<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1"
              android:gravity="center">

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	              android:orientation="vertical"
	              android:layout_width="match_parent"
	              android:layout_height="wrap_content"
	              android:weightSum="1"
	              android:gravity="center">

		<Button
			android:layout_width="128dp"
			android:layout_height="128dp"
			android:id="@+id/btn_stats"
			android:background="@drawable/logo_hires"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:gravity="center_horizontal">

			<Button
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:id="@+id/btn_jumping"
				android:layout_gravity="center_horizontal"
				android:onClick="selectJumping"
				android:background="@drawable/jumping"/>

			<Button
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:id="@+id/btn_squats"
				android:layout_gravity="center_horizontal"
				android:onClick="selectSquats"
				android:background="@drawable/squats"/>
		</LinearLayout>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content">

			<Button
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:id="@+id/btn_walking"
				android:onClick="selectWalking"
				android:background="@drawable/walking"/>

			<Button
				android:layout_width="100dp"
				android:layout_height="100dp"
				android:id="@+id/btn_running"
				android:onClick="selectRunning"
				android:background="@drawable/running"/>
		</LinearLayout>

		<Button
			android:layout_width="100dp"
			android:layout_height="100dp"
			android:id="@+id/btn_biking"
			android:layout_gravity="center_horizontal"
			android:onClick="selectBiking"
			android:background="@drawable/biking"/>

	</LinearLayout>
</ScrollView>